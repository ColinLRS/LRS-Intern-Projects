<Window x:Class="VPSXPrinterAdder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🖨 LRS Printer Adder"
        Height="620" Width="1038" Background="#F5FBFF" FontFamily="Segoe UI"
        Icon="/AdderLogo.ico">
    <!-- Window Resources for Theme and Button Style -->
    <Window.Resources>
        <SolidColorBrush x:Key="ThemeColorBrush" Color="#0061A8"/>
        <SolidColorBrush x:Key="LightThemeColorBrush" Color="#E6F0FA"/>
        <!-- Initial light shade of #0061A8 -->
        <Style x:Key="LRSButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0061A8"/>
            <!-- Static color -->
            <Setter Property="BorderBrush" Value="#004B87"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="6" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid" Background="{DynamicResource ThemeColorBrush}" Grid.Row="0" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlockTitle" Text="🖨 LRS Printer Adder"
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="20,0,0,0"
                       Grid.Column="0"/>

            <Button x:Name="UserImageButton" Grid.Column="1" Background="Transparent" BorderThickness="0" Click="UserImageButton_Click">
                <Image Source="/LRS.png" Height="40" Width="40" Margin="0,10,20,10" VerticalAlignment="Center"/>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Themes" Click="ThemesMenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/palette.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="About" Click="About_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/info.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Logout" Click="Logout_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/logout.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Exit" Click="Exit_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/exit.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Margin="20,20,20,-26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="3.5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" BorderBrush="#B3E5FC" BorderThickness="1" Margin="0,0,20,43">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="PrtSetupTextBlock" Grid.Row="0" Text="🔧 Printer Setup" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}" Margin="0,0,0,15"/>
                    <StackPanel Grid.Row="1">
                        <Label Content="🖨 Printer Count" FontWeight="SemiBold"/>
                        <TextBox x:Name="PrinterCountBox" Background="{DynamicResource LightThemeColorBrush}" Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <Label Content="📥 Hold Queue Name" FontWeight="SemiBold"/>
                        <TextBox x:Name="HoldQNameBox" Background="{DynamicResource LightThemeColorBrush}" Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3">
                        <Label Content="📛 Base Printer Name" FontWeight="SemiBold"/>
                        <TextBox x:Name="BasePrinterBox" Background="{DynamicResource LightThemeColorBrush}" Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
                        <Button x:Name="AddButton" Style="{StaticResource LRSButtonStyle}" Content="➕ Add" Width="100" Height="28" Click="Add_Click"/>
                        <Button x:Name="RunButton" Style="{StaticResource LRSButtonStyle}" Content="▶ Run" Width="100" Height="28" IsEnabled="False" Background="#43A047" BorderBrush="#2E7D32" Click="Run_Click"/>
                        <Button x:Name="CancelButton" Style="{StaticResource LRSButtonStyle}" Content="⛔ Cancel" Width="100" Height="28" Background="#C62828" BorderBrush="#B71C1C" Click="Cancel_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="SelectGroupTextBlock" Grid.Row="5" Text="🌐 Select Printer Group" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}" Margin="0,15,0,15"/>
                    <Label Grid.Row="6" Content="📥 Printer Groups" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ListBox Grid.Row="7" x:Name="HoldQueueListBox" FontFamily="Cascadia Mono" FontSize="12" Background="{DynamicResource LightThemeColorBrush}" BorderBrush="{DynamicResource ThemeColorBrush}" Foreground="Black" BorderThickness="1" HorizontalContentAlignment="Stretch" SelectionMode="Single" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="HoldQueueListBox_SelectionChanged"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#B3E5FC" BorderThickness="1" Margin="0,0,0,43">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TabControl Grid.Row="1" Margin="0,15,0,0" FontSize="13">
                        <TabItem Header="📋 Logs">
                            <TextBox x:Name="OutputBox" Margin="10" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" FontFamily="Cascadia Code" FontSize="12" Background="{DynamicResource LightThemeColorBrush}" Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}"/>
                        </TabItem>
                        <TabItem Header="📦 Printers">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="10,0,10,0" VerticalAlignment="Stretch">
                                    <Button x:Name="ClearPrtDefButton" Style="{StaticResource LRSButtonStyle}" Content="Clear" Width="90" Height="28" Background="#C62828" BorderBrush="#B71C1C" Click="ClearPrtDef_Click"/>
                                    <Button x:Name="DeleteSingleButton" Style="{StaticResource LRSButtonStyle}" Content="Delete" Width="90" Height="28" Click="DeleteSinglePrinter_Click"/>
                                    <Button x:Name="DeleteGroupButton" Style="{StaticResource LRSButtonStyle}" Content="Delete Group" Width="90" Height="28" Background="#005FA3" BorderBrush="#004B87" Click="DeletePrinterGroup_Click"/>
                                    <Button x:Name="RefreshButton" Style="{StaticResource LRSButtonStyle}" Content="🔄 Refresh" Width="90" Height="28" Background="#43A047" BorderBrush="#2E7D32" Click="RefreshPrtDef_Click" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <ListBox x:Name="PrtDefListBox" Grid.Column="1" Margin="10" FontFamily="Cascadia Mono" FontSize="12" Background="{DynamicResource LightThemeColorBrush}" Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}" BorderThickness="1" HorizontalContentAlignment="Stretch" SelectionMode="Single"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>

            <!-- Theme Selection Window -->
            <Popup x:Name="ThemePopup" Placement="Center" AllowsTransparency="True" PopupAnimation="Fade">
                <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#B3E5FC" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel Width="300">
                        <TextBlock Text="Select Theme Color" FontSize="16" FontWeight="Bold" Foreground="#0061A8" Margin="0,0,0,15"/>
                        <Slider x:Name="ColorSlider" Minimum="0" Maximum="360" ValueChanged="ColorSlider_ValueChanged"/>
                        <Rectangle x:Name="ColorPreview" Height="30" Margin="0,10,0,10"/>
                        <Button Content="Close" Style="{StaticResource LRSButtonStyle}" Width="100" HorizontalAlignment="Right" Click="CloseThemePopup_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</Window>