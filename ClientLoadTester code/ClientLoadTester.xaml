<Window x:Class="ClientLoadTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientLoadTester"
        mc:Ignorable="d"
        Title="🖨 Load Generation Tool"
        Height="524" Width="894"
        Background="#F5FBFF"
        FontFamily="Segoe UI"
        Icon="lrs.ico"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <!-- Window Resources for Theme and Button Style -->
    <Window.Resources>
        <SolidColorBrush x:Key="ThemeColorBrush" Color="#0061A8"/>
        <SolidColorBrush x:Key="LightThemeColorBrush" Color="#E6F0FA"/>
        <Style x:Key="LRSButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0061A8"/>
            <Setter Property="BorderBrush" Value="#004B87"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,18">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid x:Name="HeaderGrid" Background="{DynamicResource ThemeColorBrush}" Grid.Row="0" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TextBlockTitle" Text="🖨 LRS Load Generation Tool"
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="20,0,0,0"
                       Grid.Column="0"/>
            <Button x:Name="UserImageButton" Grid.Column="1" Background="Transparent" BorderThickness="0" Click="UserImageButton_Click">
                <Image Source="/LRS.png" Height="40" Width="40" Margin="0,10,20,10" VerticalAlignment="Center"/>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Themes" Click="ThemesMenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/palette.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="About" Click="About_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/info.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Exit" Click="Exit_Click">
                            <MenuItem.Icon>
                                <Image Source="/Icons/exit.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20,20,20,28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="3.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Test Configuration -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" 
                    BorderBrush="#B3E5FC" BorderThickness="1" Margin="0,0,20,-30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Inputs -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                        <RowDefinition Height="Auto"/>
                        <!-- Test Selection -->
                        <RowDefinition Height="*"/>
                        <!-- Status and Progress -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Text="🔧 Test Setup"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ThemeColorBrush}"
                               Margin="0,0,0,15"/>

                    <!-- Inputs -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Job Number:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBox x:Name="JobNumberInput" Grid.Row="0" Grid.Column="1" Margin="5,5,0,5"
                                 Text="{Binding JobNumberText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource LightThemeColorBrush}"
                                 BorderBrush="{DynamicResource ThemeColorBrush}"
                                 FontSize="13"/>

                        <Label Content="Step-Size:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBox x:Name="StepSizeInput" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"
                                 Text="{Binding StepSizeText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource LightThemeColorBrush}"
                                 BorderBrush="{DynamicResource ThemeColorBrush}"
                                 FontSize="13"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <Button x:Name="RunButton" Style="{StaticResource LRSButtonStyle}" Content="▶ Run" Width="100" Height="28" 
                                Background="#43A047" BorderBrush="#2E7D32" Click="RunButton_Click"/>
                        <Button x:Name="StopButton" Style="{StaticResource LRSButtonStyle}" Content="⛔ Stop" Width="100" Height="28" 
                                Background="#C62828" BorderBrush="#B71C1C" Click="StopButton_Click" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Test Type Selection -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <Label Content="📋 Select Test Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ListBox x:Name="TestTypeListBox" 
                                 FontFamily="Cascadia Code" 
                                 FontSize="12"
                                 Background="{DynamicResource LightThemeColorBrush}" 
                                 BorderBrush="{DynamicResource ThemeColorBrush}" 
                                 BorderThickness="1"
                                 SelectionChanged="TestTypeListBox_SelectionChanged">
                            <ListBoxItem Content="Normal Day"/>
                            <ListBoxItem Content="Busy/Quiet Switching"/>
                            <ListBoxItem Content="Gradual Increase"/>
                        </ListBox>
                    </StackPanel>

                    <!-- Status and Progress -->
                    <Grid Grid.Row="4" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="LoadingSymbol" Width="20" Height="20" Visibility="Collapsed" Grid.Column="0">
                            <Path x:Name="LoadingPath" Stroke="{DynamicResource ThemeColorBrush}" StrokeThickness="2" RenderTransformOrigin="0.5,0.5">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="10,2">
                                            <ArcSegment Point="18,10" Size="8,8" IsLargeArc="False" SweepDirection="Clockwise"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                        <TextBlock x:Name="StatusText" Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="13"/>
                        <ProgressBar x:Name="TestProgressBar" Grid.Column="2" Height="20" Minimum="0" Value="0" Margin="0,0,0,0"
                                     HorizontalAlignment="Stretch"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Column: Logs and Results -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" 
                    BorderBrush="#B3E5FC" BorderThickness="1" Margin="0,0,0,-30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="📋 Logs" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource ThemeColorBrush}" Margin="0,0,0,15"/>
                    <TextBox x:Name="OutputBox" Grid.Row="1" Margin="0" VerticalScrollBarVisibility="Auto" 
                             TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" 
                             FontFamily="Cascadia Code" FontSize="12" 
                             Background="{DynamicResource LightThemeColorBrush}" 
                             Foreground="Black" BorderBrush="{DynamicResource ThemeColorBrush}"
                             Text="{Binding LogText, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Border>

            <!-- Theme Selection Popup -->
            <Popup x:Name="ThemePopup" Placement="Center" AllowsTransparency="True" PopupAnimation="Fade">
                <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#B3E5FC" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="4" Opacity="0.2" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel Width="300">
                        <TextBlock Text="Select Theme Color" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ThemeColorBrush}" Margin="0,0,0,15"/>
                        <Slider x:Name="ColorSlider" Minimum="0" Maximum="360" ValueChanged="ColorSlider_ValueChanged"/>
                        <Rectangle x:Name="ColorPreview" Height="30" Margin="0,10,0,10"/>
                        <Button Content="Close" Style="{StaticResource LRSButtonStyle}" Width="100" HorizontalAlignment="Right" Click="CloseThemePopup_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</Window>