    <None Remove="LRS.png" />
    <None Remove="menu.png" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Shared.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="AdderLogo.ico" />
    <Resource Include="AdderLogo2.png" />
