<Window x:Class="VPSXPrinterAdder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🖥️ VPSX Session Login"
        Height="400" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F5FBFF"
        FontFamily="Segoe UI" FontSize="13"
        Icon="/AdderLogo.ico">

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0061A8"/>
            <Setter Property="BorderBrush" Value="#004B87"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#004B87" Grid.Row="0" LastChildFill="True">
            <TextBlock Text="🖥️ VPSX Session Login"
                       FontSize="18" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" Margin="16,0,0,0"/>
        </DockPanel>

        <!-- Body -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                BorderBrush="#B3E5FC"
                BorderThickness="1"
                Margin="16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.15" BlurRadius="8"/>
            </Border.Effect>

            <StackPanel Margin="16">
                <!-- Hostname -->
                <Label Content="🌐 Hostname" FontWeight="SemiBold" FontSize="13"/>
                <TextBox x:Name="HostnameBox"
                         Background="#EDF7FE" BorderBrush="#0072CE"
                         FontSize="12" Height="24"/>

                <!-- SOAP Token -->
                <Label Content="🔑 SOAP Token" Margin="0,8,0,0" FontWeight="SemiBold" FontSize="13"/>
                <TextBox x:Name="SoapTokenBox"
                         Background="#EDF7FE" BorderBrush="#0072CE"
                         FontSize="12" Height="24"/>

                <!-- VPSID -->
                <Label Content="🆔 VPSID" Margin="0,8,0,0" FontWeight="SemiBold" FontSize="13"/>
                <TextBox x:Name="VpsidBox"
                         Background="#EDF7FE" BorderBrush="#0072CE"
                         FontSize="12" Height="24"/>

                <!-- Button and Output -->
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Button Content="🔓 Login"
                            Width="130" Height="28"
                            Style="{StaticResource RoundedButton}"
                            Click="Login_Click"/>

                    <Border Background="#F5FBFF"
                            BorderBrush="#0072CE"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="8"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Width="240" Height="48">
                        <TextBlock x:Name="OutputBox"
                                   FontFamily="Cascadia Code"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Foreground="Black"
                                   Text="Session ID will appear here..."/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>