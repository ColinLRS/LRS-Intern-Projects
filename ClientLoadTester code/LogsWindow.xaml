<Window x:Class="ClientLoadTester.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs" Height="680" Width="800"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Icon="lrs.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" Background="#007ACC" Padding="10">
			<Grid>
				<TextBlock Text="The Boats and The Logs" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="CloseButton_Click" Background="Transparent" Foreground="White"
                        BorderThickness="0" Padding="10,5"/>
			</Grid>
		</Border>

		<!-- Content -->
		<Border Grid.Row="1" Margin="10" Background="#F0F0F0" CornerRadius="5" Padding="10">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
					<Button Content="Refresh" Click="RefreshButton_Click" Margin="0,0,10,0" Padding="5"/>
					<Button Content="Clear Logs" Click="ClearButton_Click" Padding="5"/>
				</StackPanel>

				<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
					<ListBox x:Name="LogListBox" ItemsSource="{Binding LogEntries}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}" TextWrapping="Wrap"/>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</ScrollViewer>

				<TextBlock Grid.Row="2" Text="{Binding LogFilePath}" Margin="0,10,0,0"/>
			</Grid>
		</Border>

		<!-- Footer -->
		<Border Grid.Row="2" Background="#007ACC" Padding="10">
			<TextBlock Text="Â© Levi, Ray and Shoup, Inc. 2024" FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
	</Grid>
</Window>